/* pages/goods/goods.wxss */
@import '../common/weui.wxss';

.goods-root {
  display: flex;
  flex-direction: column;
  width: 100%;
  background-color: white;
}
.goods-content {
  display: flex;
  height: calc(100vh - 240rpx);
  width: 100%;
}
.left,
.right {
  overflow: auto;
  height: auto;
  padding: 1rpx;
  -webkit-overflow-scrolling: touch;
  -ms-overflow-style: none;
}
.left::-webkit-scrollbar,
.right::-webkit-scrollbar {
  display: none;
}
.left {
  flex: 1;
  border-right: 1rpx #E5E5E5 solid;
}
.right {
  flex: 3;
}
.goods-cart {
  z-index: 1000;
  height: 240rpx;
}

.goods-item {
  width: 100%;
  height: 80rpx;
}

.category {
  position: relative;
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  font-size: 30rpx;
  background-color: white;
}

.category::after {
  content: " ";
  position: absolute;
  height: 1rpx;
  right: 0;
  bottom: 0;
  left:0;
  background-color: #E5E5E5;
}

.cart {
  height: 120rpx;
  display: flex;
  border-bottom: 1rpx #E5E5E5 solid;
}

.cart-number{
  position: relative;
  width: 70px;
  height: 70px;
  border-radius: 70px;
  background-color: #0F8EE9;
  float: left;
  margin-left: 30px;
  margin-top: -20px;
  text-align: center;
  line-height: 7;
}

.cart-info {
  margin-left: 10px;
  line-height: 120rpx;
}

.cart-info-number {
  font-size: 48rpx;
  margin-left: 20rpx;
  line-height: 120rpx;
  color: #0092E0;
}

.cart-info-number-second {
  margin-left: 4rpx;
}

.number-bage {
  position:absolute;
  top:0rpx;
  right:0rpx;
}

.cart-image {
  display:block;
  width:80rpx;
  height:80rpx;
  position:absolute;
  top:30rpx;
  left:30rpx;
}